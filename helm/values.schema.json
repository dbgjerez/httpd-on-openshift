{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "image": {
            "type": "object",
            "required": [
                "repository",
                "tag"
            ],
            "properties": {
                "repository": {
                    "type": "string",
                    "description": "The container image repository for Apache http server"
                },
                "tag": {
                    "type": "string",
                    "description": "The container tag"
                }
            }
        },
        "storage": {
            "type": "object",
            "required": [
                "size",
                "storageClass"
            ],
            "properties": {
                "size": {
                    "type": "string",
                    "title": "Volume Size",
                    "form": true,
                    "render": "slider",
                    "sliderMin": 1,
                    "sliderMax": 2048,
                    "sliderUnit": "Gi"
                },
                "storageClass": {
                    "type": "string",
                    "description": "The StorageClass to provision the volume"
                }
            }
        },
        "fullnameOverride": {
            "type": "string",
            "description": "The complete prefix for all the objects generated by the chart."
        },
        "service": {
            "type": "object",
            "required": [
                "port"
            ],
            "properties": {
                "port": {
                    "type": "integer",
                    "description": "The port to expose httpd"
                }
            }
        }
    }
}