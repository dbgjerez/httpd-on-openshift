{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "affinity": {
      "additionalProperties": false,
      "description": "Affinity definition",
      "required": [],
      "title": "affinity"
    },
    "certManager": {
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "default": "true",
          "description": "Enabling cert-manager Certs creation",
          "required": [],
          "title": "enabled"
        },
        "issuerRef": {
          "additionalProperties": false,
          "properties": {
            "kind": {
              "default": "ClusterIssuer",
              "description": "Kind of Issuer",
              "enum": [
                "Issuer",
                "ClusterIssuer"
              ],
              "required": [],
              "title": "kind"
            },
            "name": {
              "default": "",
              "description": "IssuerName",
              "required": [],
              "title": "name"
            }
          },
          "required": [],
          "title": "issuerRef",
          "type": "object"
        }
      },
      "required": [
        "issuerRef"
      ],
      "title": "certManager",
      "type": "object"
    },
    "domain": {
      "default": "apps.ocp.sa-iberia.lab.eng.brq2.redhat.com",
      "description": "default domain for ingress controller",
      "required": [],
      "title": "domain"
    },
    "extraConfigMaps": {
      "items": {
        "required": []
      },
      "required": [],
      "title": "extraConfigMaps",
      "type": "array"
    },
    "fullnameOverride": {
      "additionalProperties": false,
      "description": "The complete prefix for all the objects generated by the chart (optional)",
      "required": [],
      "title": "fullnameOverride"
    },
    "git": {
      "additionalProperties": false,
      "properties": {
        "branch": {
          "default": "master",
          "description": "Git branch with content",
          "required": [],
          "title": "branch"
        },
        "url": {
          "default": "https://github.com/sclorg/httpd-ex.git",
          "description": "Git URL with content",
          "required": [],
          "title": "url"
        }
      },
      "required": [],
      "title": "git",
      "type": "object"
    },
    "global": {
      "description": "Global values are values that can be accessed from any chart or subchart by exactly the same name.",
      "required": [],
      "title": "global",
      "type": "object"
    },
    "image": {
      "additionalProperties": false,
      "properties": {
        "repository": {
          "default": "quay.io/rgordill/httpd-micro",
          "description": "The container image repository for Apache http server",
          "required": [],
          "title": "repository"
        },
        "tag": {
          "default": "2.24-0",
          "description": "The container image tag for Apache http server",
          "required": [],
          "title": "tag"
        }
      },
      "required": [],
      "title": "image",
      "type": "object"
    },
    "ingress": {
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "default": "true",
          "description": "Expose http outside the cluster",
          "required": [],
          "title": "enabled"
        }
      },
      "required": [],
      "title": "ingress",
      "type": "object"
    },
    "logging": {
      "default": "json",
      "description": "Logging format",
      "enum": [
        "json",
        "combined"
      ],
      "required": [],
      "title": "logging"
    },
    "monitor": {
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "default": "true",
          "description": "Monitoring enabled",
          "required": [],
          "title": "enabled"
        },
        "image": {
          "additionalProperties": false,
          "properties": {
            "repository": {
              "default": "quay.io/lusitaniae/apache-exporter",
              "required": [],
              "title": "repository",
              "type": "string"
            },
            "tag": {
              "default": "latest",
              "required": [],
              "title": "tag",
              "type": "string"
            }
          },
          "required": [
            "repository",
            "tag"
          ],
          "title": "image",
          "type": "object"
        }
      },
      "required": [
        "image"
      ],
      "title": "monitor",
      "type": "object"
    },
    "replicas": {
      "default": "1",
      "description": "Number of replicas",
      "required": [],
      "title": "replicas"
    },
    "resources": {
      "additionalProperties": false,
      "description": "CPU and memory resources for the pod",
      "properties": {
        "limits": {
          "additionalProperties": false,
          "properties": {
            "cpu": {
              "default": "1",
              "description": "CPU limits",
              "required": [],
              "title": "cpu"
            },
            "memory": {
              "default": "512Mi",
              "description": "Memory limits",
              "required": [],
              "title": "memory",
              "x-form": true,
              "x-render": "slider",
              "x-sliderMax": 2048,
              "x-sliderMin": 128,
              "x-sliderUnit": "Mi"
            }
          },
          "required": [],
          "title": "limits",
          "type": "object"
        },
        "requests": {
          "additionalProperties": false,
          "description": "CPU and memory Requests",
          "properties": {
            "cpu": {
              "default": "1",
              "description": "CPU requests",
              "required": [],
              "title": "cpu"
            },
            "memory": {
              "default": "512Mi",
              "description": "Memory requests",
              "required": [],
              "title": "memory",
              "x-form": true,
              "x-render": "slider",
              "x-sliderMax": 2048,
              "x-sliderMin": 128,
              "x-sliderUnit": "Mi"
            }
          },
          "required": [],
          "title": "requests"
        }
      },
      "required": [
        "limits"
      ],
      "title": "resources"
    },
    "service": {
      "additionalProperties": false,
      "properties": {
        "port": {
          "default": "443",
          "description": "Service port number to expose httpd internally",
          "required": [],
          "title": "port"
        }
      },
      "required": [],
      "title": "service",
      "type": "object"
    },
    "storage": {
      "additionalProperties": false,
      "properties": {
        "size": {
          "default": "1Gi",
          "description": "Volume Size",
          "required": [],
          "title": "size",
          "x-form": true,
          "x-render": "slider",
          "x-sliderMax": 2048,
          "x-sliderMin": 1,
          "x-sliderUnit": "Gi"
        },
        "storageClass": {
          "default": "ocs-storagecluster-cephfs",
          "description": "The RWX-capable StorageClass to provision the volume.",
          "required": [],
          "title": "storageClass"
        }
      },
      "required": [],
      "title": "storage",
      "type": "object"
    }
  },
  "required": [
    "image",
    "storage",
    "service",
    "ingress",
    "git",
    "monitor",
    "certManager",
    "extraConfigMaps"
  ],
  "type": "object"
}